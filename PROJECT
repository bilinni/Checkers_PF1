;;SQUARE-SIZE
(define SIZE 50)

;;;WHITE TOKEN
(define W-TOKEN 
   (circle (/ SIZE 2) "solid" "gray"))

;;;BLACK TOKEN
(define B-TOKEN
   (circle (/ SIZE 2) "solid" "red"))

;;;BOARD-IMAGE


;;BORDER-SQUARE
(define BORDER (square (+(* SIZE 8)(* (* SIZE 8) (/ 1 26.67 )))"solid" "brown"))

